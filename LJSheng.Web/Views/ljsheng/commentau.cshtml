
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>评论操作</title>
    <link href="~/plugins/layui/css/layui.css" rel="stylesheet" />
</head>
<body style="margin-left:10px;margin-top:10px;">
    @using (Html.BeginForm("commentau", "ljsheng", new { gid = Request.QueryString["gid"] }, FormMethod.Post, new { @class = "layui-form layui-form-pane" }))
    {
        <div class="layui-form-item">
            <label class="layui-form-label">评论内容</label>
            <div class="layui-input-inline">
                <textarea type="text" name="content" style="height:88px;width:198px;">@ViewBag.content</textarea>
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">回复</label>
            <div class="layui-input-inline">
                <textarea type="text" name="reply" style="height:88px;width:198px;">@ViewBag.reply</textarea>
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">排序</label>
            <div class="layui-input-inline">
                <input type="text" name="sort" lay-verify="num" autocomplete="off" class="layui-input" onkeyup="value=value.replace(/[^\d]/g,'');" value="@ViewBag.sort">
            </div>
            <div class="layui-form-mid layui-word-aux">数字越大显示越前面</div>
        </div>
        <div class="layui-form-item" pane="">
            <label class="layui-form-label">是否显示</label>
            <div class="layui-input-block">
                <input type="radio" name="show" value="1" title="显示" @(ViewBag.show != 2 ? "checked=\"\"" : "")>
                <input type="radio" name="show" value="2" title="不显示" @(ViewBag.show == 2 ? "checked=\"\"" : "")>
            </div>
        </div>
        <div class="layui-form-item">
            <button class="layui-btn" lay-submit="">提交</button>
        </div>
    }
    <script src="~/plugins/layui/layui.js"></script>
    <script>
           layui.use(['form'], function () {
               var form = layui.form();
           });
    </script>
</body>
</html>
