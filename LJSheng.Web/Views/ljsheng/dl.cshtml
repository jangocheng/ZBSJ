
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="~/css/ljsheng/global.css" rel="stylesheet" />
    <title>后台登录</title>
    <style type="text/css">
        html {
            height: 100%;
            overflow: hidden;
        }

        body {
            background: #303f52 url(/images/ljsheng/log.jpg) center -50px;
            height: 100%;
        }
    </style>
</head>
<body>
    <div class="login">
        @using (Html.BeginForm("dl", "ljsheng", FormMethod.Post))
        {
        <ul class="log">
            <li>
                <input type="text" name="account" runat="server" />
            </li>
            <li>
                <input type="password" name="pwd" runat="server" />
            </li>
            <li class="yzm">
                <input type="text" id="txtcode" runat="server" /><img alt="点击更换" width="60" height="25" src="/plugins/VerifyCode.aspx" onclick="this.src=this.src + '?' + getURLDateTimePar();" id="imgVerify" title="看不清？请按F5刷新" style="cursor: pointer;" />
            </li>
            <li class="logbtn">
                <input type="button" />
            </li>
        </ul>
        }
    </div>
</body>
</html>
