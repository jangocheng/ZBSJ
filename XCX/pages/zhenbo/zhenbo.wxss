  padding: 20rpx;
  background-color: white;
  width: 90%;
  height: 430rpx;
}

.title {
  color: black;
  font-size: 30rpx;
}

.more {
  float: right;
  color: black;
  font-size: 30rpx;
  height: 100rpx;
}

.time {
  font-size: 25rpx;
  color: #b3b3b3;
}

.addr {
  font-size: 25rpx;
  background-color: #f8f8f8;
  float: left;
  width: 100%;
  height: 80rpx;
  padding-top: 20rpx;
}

.pay {
  color: #b3b3b3;
  font-size: 30rpx;
}

.li image {
  width: 50rpx;
  height: 50rpx;
}

.rmb {
  font-size: 58rpx;
}

/*横向时间轴*/

.time-horizontal {
  list-style-type: none;
  border-top: 1rpx solid #707070;
  margin-top: 30rpx;
}

.hli {
  float: left;
  position: relative;
  text-align: center;
  width: 25%;
  height: 20rpx;
  padding-top: 10px;
  padding-bottom: 50rpx;
}

.hb:before {
  content: '';
  position: absolute;
  top: -10px;
  left: 47%;
  width: 12px;
  height: 12px;
  border: 1rpx solid #4c4c4c;
  border-radius: 8px;
  background: #4c4c4c;
}

.green:before {
  background: greenyellow !important;
}

/*纵向时间轴*/

.time-vertical {
  list-style-type: none;
  border-left: 1px solid #707070;
  padding: 0px;
  height: auto;
  margin-left: 80rpx;
}

.vli {
  height: auto;
  position: relative;
  padding-bottom: 30rpx;
}

.va {
  display: inline-block;
  margin-left: -20rpx;
  margin-top: 15px;
  text-decoration: none;
  color: #000;
}

.vb:before {
  content: '';
  position: absolute;
  top: 15px;
  left: -35px;
  width: 18px;
  height: 18px;
  border: 2px solid #98fb98;
  border-radius: 10px;
  background: #98fb98;
}

.vs {
  position: absolute;
  top: -8px;
  left: -150rpx;
}

.info {
  background-color: #f3f3fa;
  height: auto;
  min-height: 300rpx;
  width: 68%;
  position: absolute;
  top: 30%;
  left: 120rpx;
  border: 1rpx solid #ebebeb;
  border-radius: 28rpx 28rpx 28rpx 28rpx;
  text-indent: 30rpx;
  padding-top: 20rpx;
}

.order {
  color: black;
  font-size: 28rpx;
}

.x {
  float: right;
  width: 60rpx;
  height: 60rpx;
  filter: alpha(Opacity=80);
  -moz-opacity: 0.3;
  opacity: 0.3;
  padding-right: 2rpx;
  margin-top: -20rpx;
}

.list {
  font-size: 25rpx;
  line-height: 50rpx;
  padding-top: 30rpx;
  padding-left: 50rpx;
  color: #005ab5;
}
