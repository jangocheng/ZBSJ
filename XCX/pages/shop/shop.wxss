.main {
  width: 100%;
  height: 100%;
}

.left {
  float: left;
  width: 15%;
  height: 100%;
  letter-spacing: 18rpx;
}

.right {
  float: right;
  width: 85%;
  height: 100%;
}

.tab-h {
  height: 100%;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 80rpx;
  background: #f7f7f7;
  font-size: 16px;
  white-space: nowrap;
  top: 0;
  left: 0;
  z-index: 99;
}

.tab-item {
  padding-left: 10rpx;
}

.tab-item.active {
  color: #4675f9;
  position: relative;
  background-color: white;
  width: 100%;
}

.tab-item.active:after {
  content: "";
  display: block;
  height: 8rpx;
  width: 150rpx;
  background: #4ada83;
  position: absolute;
  bottom: 0;
  left: 5rpx;
}


.tab-content {
  margin-top: 2rpx;
  height: 100%;
}

